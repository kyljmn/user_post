<h1><%= @user.first_name + " " + @user.last_name %></h1>
<h2><%= @user.username %></h2>

<h3>Make a post</h3>
<%= render 'posts/form' %>

<% if @user.posts.length > 0 %>
  <h3>Posts</h3>
  <%= render @user.posts %>
  <%= @user.posts.length %>
<% end %>

<%= link_to 'Users List', users_path %> || <%= link_to 'Edit', edit_user_path(@user) %> || <%= link_to 'Destroy', user_path(@user), method: :delete %>
